<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'list', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
              　<%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book" %>
  　　　　　　　　　　<% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger destroy_book", rel: "nofollow", method: :delete %>
              <% end %>
            </td>
            <td colspan="5"></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>